{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wshadow",
                "-g3",
                "-O0",
                "-std=c++17",
                "src/main.cpp",
                "src/menu/menu.cpp",
                "src/admin/admin.cpp",
                "src/utils/screen.cpp",
                "-o",
                "build/Debug/outDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
